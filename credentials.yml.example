# Arduino Cloud CLI Credentials Template
# Copy this file to credentials.yml and fill in your actual credentials
# NEVER commit credentials.yml to git - it's in .gitignore

# Get your credentials from: https://cloud.arduino.cc/home/api-keys
# Click "CREATE API KEY" to generate new credentials

client_id: "your-client-id-here"
client_secret: "your-client-secret-here"

# Optional: Organization ID (for team/business accounts)
# Leave blank for personal accounts
organization_id: ""

# Usage:
# After creating credentials.yml, initialize arduino-cloud-cli:
#   arduino-cloud-cli credentials init
#
# Or point to this file directly:
#   export ARDUINO_CLOUD_CLIENT=$(cat credentials.yml | grep client_id | cut -d: -f2 | tr -d ' "')
#   export ARDUINO_CLOUD_SECRET=$(cat credentials.yml | grep client_secret | cut -d: -f2 | tr -d ' "')
